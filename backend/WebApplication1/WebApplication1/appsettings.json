{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=ChitChatDB;Trusted_Connection=True;TrustServerCertificate=True;",
    "AzureStorage": "YOUR_AZURE_STORAGE_CONNECTION_STRING_HERE"
  },
  "Jwt": {
    "Key": "your-super-secret-key-with-at-least-32-characters",
    "Issuer": "https://chitchat.com",
    "Audience": "https://chitchat.com/api",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7,
    "RequireHttpsMetadata": true,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "Email": {
    "SmtpUsername": "YOUR_SMTP_USERNAME",
    "SmtpPassword": "YOUR_SMTP_PASSWORD",
    "FromEmail": "YOUR_FROM_EMAIL",
    "FromName": "ChitChat"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
